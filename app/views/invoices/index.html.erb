<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.data %></td>
        <td><%= invoice.customer.name %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% if invoice.invoice_items.count > 0 %>
      <tr>
        <td></td>
        <td>

        <table border="1">
          <thead>
          <tr>
            <th>Item</th>
            <th>Number</th>
            <th>Value</th>

          </tr>
          </thead>

          <tbody>
          <% invoice.invoice_items.each do |invoice_item| %>
            <tr>
              <td><%= invoice_item.item.name %></td>
              <td><%= invoice_item.number %></td>
              <td><%= invoice_item.number*invoice_item.item.price %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        </td>
      </tr>
    <% end %>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invoice', new_invoice_path %>
